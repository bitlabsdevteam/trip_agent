# API Keys for the Trip Agent application
# Replace the placeholder values with your actual API keys

# Required API Keys
# OpenAI API Key for GPT-4o model
OPENAI_API_KEY=your_openai_api_key_here

# Weather API Key for weather data
WEATHER_API_KEY=your_weather_api_key_here

# Optional API Keys
# Google API Key for Maps and other Google services
GOOGLE_API_KEY=your_google_api_key_here

# Groq API Key (if using Groq models)
GROQ_API_KEY=your_groq_api_key_here

# HuggingFace API Key (if needed)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# LLM Configuration
# Provider can be "openai", "groq", or "google"
LLM_PROVIDER=openai
# Model name (defaults to provider's default if not specified)
LLM_MODEL=gpt-4o
# Temperature for the LLM (0.0 to 1.0)
LLM_TEMPERATURE=0.7